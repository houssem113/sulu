<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">
    <block name="blocks" default-type="text-section">
        <!-- @see https://docs.sulu.io/en/2.2/reference/content-types/block.html -->

        <types>
            <type name="text-section">
                <meta>
                    <title>text.section</title>
                </meta>
                <properties> 
                    <property name="subtitle" type="text_line">
                        <meta>
                            <title>SubTitle</title>
                        </meta>
                    </property>
                    <block name="list_item"  >
                        <types>
                            <type name="text" >
                                <meta>
                                    <title>single.item</title>
                                </meta>
                                <properties>
                                    <property name="item_title" type="text_line">
                                        <meta>
                                            <title>Item title</title>
                                        </meta>
                                    </property>
                                    <property name="item_description" type="text_editor">
                                        <meta>
                                            <title>Item title</title>
                                        </meta>
                                    </property>
                                    <property name="item_image"  type="single_media_selection">
                                        <meta>
                                            <title>Item image</title>
                                        </meta>
                                    </property>
                                </properties>
                            </type>  
                        </types>
                    </block>
                </properties>
            </type>
        </types>
    </block>
</properties>